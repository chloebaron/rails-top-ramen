<div class="ramen-photo" style="background-image: url('https://images.unsplash.com/photo-1526318896980-cf78c088247c?ixlib=rb-0.3.5&q=80&fm=jpg&crop=entropy&cs=tinysrgb&w=1600&h=900&fit=crop&ixid=eyJhcHBfaWQiOjF9&s=20e4c4698221bea2095b10b4998d3be4');">
  <%= render "shared/navbar" %>
</div>
<div class="container">
  <div class="ramen-description">
    <!-- above placeholder for link_to favourite -->
    <% if !@ramen.users.include? @user %> <!-- checks to see if user has not favorited the ramen -->
      <h2><%= @ramen.name %> <i class="fa fa-star"></i></h2>
      <%= link_to "Add Favorite", ramen_favourites_path(@ramen), method: :post %>
    <% else %> <!-- Other wise, if the user has favorited the ramen, then show name with a yellow star-->
       <h2><%= @ramen.name %> <i class="fa fa-star yellow"></i></h2>
    <% end %>

    <p><%= @ramen.description %></p>
    <p>This ramen was brought to you by: User<i> <%= @ramen.user_id %> </i></p>
  </div>
</div>
