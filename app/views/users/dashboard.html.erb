    <div class="ramen-tab">
      <input id="ramens" type="radio" name="tabs">
      <label for="ramens"><h2> Ramen </h2></label>
    </div>

    <div class="review-tab">
      <input id="reviews" type="radio" name="tabs">
      <label for="reviews"><h2> Reviews </h2></label>
    </div>

    <div class="requests-tab">
      <input id="requests" type="radio" name="tabs">
      <label for="requests"><h2> Requests </h2></label>
    </div>

  </div>

  <div class="sidenav-bottom">
  </div>

  <div class="main">
    <div class="content" id="user-ramen">
      <h1>Hello User</h1>
      <% @user.ramens.each do |ramen| %>

        <h3><%= ramen.name %></h3>
      <% end %>
    </div>


    <div class="content" id="user-reviews">
      <h1>Bonjour</h1>
    </div>

    <div class="content" id="user-requests">
      <% @user.ramens.each do |ramen| %>
        <% ramen.favourites.each do |fav| %>
          <% if fav.accepted == "Pending" %>
            <h3><%= fav.user.email %> wants to add <%= fav.ramen.name %> to their favorite's list</h3>
            <%= link_to "Accept", favourite_path(fav), method: :patch %>
            <%= link_to "Decline", favourite_path(fav), method: :delete %>
            <!-- fix the duplicated display request -->
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>

