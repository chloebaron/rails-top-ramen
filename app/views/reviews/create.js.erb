function refreshForm(innerHTML) {
  let newReviewForm = document.getElementById('new_review');
  let newReviewForm.innerHTML = innerHTML


}

function addReview(reviewHTML) {
  let reviews = document.getElementById('reviews')
  reviews.insertAdjacentHTML('beforeend', reviewHTML);
}


<% if @review.errors.any? %>
  refreshForm('<%= j render "reviews/form_new", ramen: @ramen, review: @review %>');
<% else %>
  addReview('<%= j render "reviews/show", review: @review %>');
  refreshForm('<%= j render "reviews/form_new", ramen: @ramen, review: Review.new %>');
<% end %>
